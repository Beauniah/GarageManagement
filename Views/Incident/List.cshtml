@{
}
@model List<GarageManagement.Models.Entities.Incident>
<h1>Incident</h1>
<a class="btn btn-primary" asp-controller="Incident" asp-action="Add">Report incident</a>
<table class="table">
    <thead>
        <tr>
            <th>Vehicle Make</th>
            <th>Date</th>
            <th>Description</th>
            <th>ServeityLevel</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incident in Model)
        {
            <tr>
                <td>@incident.Vehicle?.Make</td>
                <td>@incident.DateReported</td>
                <td>@incident.Description</td>
                <td>@incident.SeverityLevel</td>
                <td>@incident.Status</td>

                <td>
                    <a class="btn btn-primary" asp-controller="Incident" asp-action="Edit" asp-route-id="@incident.IncidentId">Edit</a>
                </td>

            </tr>


        }
    </tbody>
</table>