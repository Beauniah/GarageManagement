@{
}
@model List<GarageManagement.Models.Entities.Vehicle>
<h1>Vehlices</h1>
<a class="btn btn-primary" asp-controller="Vehicle" asp-action="Add">Add Vehicle</a>
<table class="table">
    <thead>
        <tr>
            <th>Model</th>
            <th>Make</th>
            <th>DateAquired</th>
            <th>Year</th>
            <th>Ministry</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Model</td>
                <td>@vehicle.Make</td>
                <td>@vehicle.DateAquired</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.Ministry?.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@vehicle.VehicleId">Edit</a>
                </td>

            </tr>


        }
    </tbody>
</table>