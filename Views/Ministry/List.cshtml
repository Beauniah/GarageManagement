@{
}
@model List<GarageManagement.Models.Entities.Ministry>
<h1>Minsitry</h1>
<a class ="btn btn-primary" asp-controller="Ministry" asp-action="Add">Add Minsitry</a >
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ministry in Model)
        {
            <tr>
                <td>@ministry.Name</td>
                <td>
                    <a class="btn btn-primary"  asp-controller="Ministry" asp-action="Edit" asp-route-id="@ministry.MinistryId">Edit</a>
                </td>

            </tr>

           
        }
    </tbody>
</table>